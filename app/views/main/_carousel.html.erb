  

  
  <div id="myCarousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <% articles.each_with_index do |article,index| %>
        <li data-target="#myCarousel" class="<%= index == 0 ? 'active' : '' %>" data-slide-to="<%= index %>"></li>
      <% end %>
    </ol>
    <div class="carousel-inner">
      <% articles.each_with_index do |article,index| %>
        <div class="<%= index == 0 ? 'carousel-item active' : 'carousel-item' %>">
          <%= image_tag(article_cover_url(article)) %>
          <div class="container">
            <div class=" <%= index%3 == 0 ? 'carousel-caption text-left' : index%3 == 1 ? 'carousel-caption text-center' : 'carousel-caption text-right' %>">
              <h1><%= article.title %></h1>
              <p><%= article.summary %></p>
              <p><a class="btn btn-lg btn-primary" href="#" role="button">See more</a></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>