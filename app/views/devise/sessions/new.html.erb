<%= stylesheet_link_tag 'login/style.css', media: 'all', 'data-turbolinks-track': 'reload' %>
<section class="signup">
  <div class="container">
    <div class="signup-content">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <h2 class="form-title">Log In</h2>
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input", placeholder: "Email" %>
        </div>
        <div class="form-group">
          <%= f.password_field :password, autocomplete: "password", class: "form-input", placeholder: "Password" %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="form-group">
            <%= f.check_box :remember_me, class: 'd-inline-block' %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
        <div class="form-group">
          <%= f.submit "Log In", class: "form-submit"%>
        </div>
      <% end %>
      <p class="loginhere" style="margin-bottom: 56px;">
        <%= render "devise/shared/links" %>
      </p>
    </div>
  </div>
</section>
<script>
  document.addEventListener("DOMContentLoaded", () => {
    $('body').css('background-image','linear-gradient(to left, rgba(245, 241, 200, 0.6), rgb(247, 233, 231)), url(<%= image_url('battlefield.jpg') %>)');
  });
</script>

